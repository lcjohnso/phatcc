<h1>New Comment</h1>

<% if flash[:message] %> 
  <div><%= flash[:message] %></div>
<% end %>

<% form_for([@cluster, @comment]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :user %><br />
    <%= f.text_field :user, :value => @user.username %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :size => "80x5" %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back to Cluster', @cluster %>
