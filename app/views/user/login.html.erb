<h1>Login</h1>

<% if flash[:error] %>
  <div><%= flash[:error] %></div>
<% end %>

<% if flash[:message] %>
  <div><%= flash[:message] %></div>
<% end %>

<%= form_tag({:controller => "user", :action => "process_login"}) do %>
  <p>
  Username: <%= text_field(:user, :username) %>
  Password: <%= password_field(:user, :password) %>
  <%= submit_tag "Login" %>
  </p>
<% end %>
